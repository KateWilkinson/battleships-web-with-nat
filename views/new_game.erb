          <option name="ship" value="battleship">Battleship</option>
          <option name="ship" value="aircraft_carrier">Aircraft Carrier</option>
        </select>
        Coordinates: <input type="text" name="coordinates" >
        Orientation: <!-- <input type="text" name="orientation" > -->

        <select name="orientation">
          <option name="orientation" value="vertically">Vertical</option>
          <option name="orientation" value="horizontally">Horizontal</option>
        </select>

        <input type="submit" value="Submit">
    </form>

    <form action="/Gameplay" method="post">
      <input type="submit" value="Start" id="start_game">
    </form>
